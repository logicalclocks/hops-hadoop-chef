#!/bin/sh
#
# Startup script for resource-manager
#
### BEGIN INIT INFO
# Provides:                     resource-manager-*
# Required-Start:                 
# Should-Start:                 
# Required-Stop:                  
# Default-Start:                2 3 4 5
# Default-Stop:                 0 1 6
# Short-Description:            start and stop resource-manager-*
# Description:                  Start/Stop/Restart Resource-Manager
### END INIT INFO

# Variables

START_PROG="<%= node['hops']['base_dir'] %>/sbin/start-rm.sh"  
STOP_PROG="<%= node['hops']['base_dir'] %>/sbin/stop-rm.sh"  

EXEC_WITH_USER="su <%= node['hops']['rm']['user'] %> -c"

start() {
  rm -f <%= node['hops']['logs_dir'] %>/hadoop.log
  ulimit -n 65000 2>&1 > /dev/null
  $EXEC_WITH_USER "$START_PROG"
  return $?
}

stop() {
  "$STOP_PROG"
  return $?
}

status() {
  PID_FILE=<%= "#{node['hops']['logs_dir']}" %>/yarn-<%= "#{node['hops']['rm']['user']}" %>-resourcemanager.pid
  res=1
  if [ -f $PID_FILE ] ; then
     PID=`cat $PID_FILE`
     kill -0 $PID
     res=$?
  fi
  if [ $res -eq 0 ] ; then
   echo "resourcemanager($PID) is running"
  else
   echo "resourcemanager is not running"
  fi
  return $res
}

restart() {
  status
  if [ $? -eq 0 ] ; then
    stop
    sleep 3
  fi
  start
  return $?
}


# user-supplied parameter to stop/start/restart process.
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  status)
    status
    ;;
  -h|--help)
    echo ""
    echo "usage: <prog> start|stop|restart|status"
    echo ""
    exit 0
    ;;
  *)
    echo $"Usage: <prog> {start|stop|restart|status}"
    exit 1
  esac


exit $?
