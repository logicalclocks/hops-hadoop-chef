#!/bin/bash

command=namenode

EXEC_WITH_USER="su <%= node[:hdfs][:user] %> -l -c"

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`

log=<%= node[:hadoop][:logs_dir] %>/hadoop-<%= node[:hdfs][:user] %>-$command-<%= node['hostname'] %>.log

$EXEC_WITH_USER "cd ${bin}/..; . ${bin}/../libexec/hdfs-config.sh ; ${bin}/hadoop-daemon.sh --config \$HADOOP_CONF_DIR --script hdfs start $command"
sleep 2; head "$log"

PID_FILE=<%= node[:hadoop][:logs_dir] %>/hadoop-<%= node[:hdfs][:user] %>-$command.pid
PID=`cat $PID_FILE` 
kill -0 $PID 

exit $?

